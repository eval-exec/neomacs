; Lock in face-font argument/error behavior.
(fboundp 'face-font)
(face-font 'default)
(face-font 'default nil)
(face-font 'default nil nil)
(face-font 'default nil t)
(face-font "default")
(face-font "mode-line")
(condition-case err (face-font "unknown-face") (error err))
(condition-case err (face-font "") (error err))
(condition-case err (face-font 1) (error err))
(condition-case err (face-font 'unknown-face) (error err))
(condition-case err (face-font nil) (error err))
(condition-case err (face-font t) (error err))
(condition-case err (face-font) (error err))
(condition-case err (face-font 'default nil nil nil) (error err))

(internal-make-lisp-face 'face-font-x)
(condition-case err (face-font 'face-font-x) (error err))
(condition-case err (face-font "face-font-x") (error err))
