; Lock in selected-frame designator handling for display query APIs.
(let ((f (selected-frame)))
  (list (display-graphic-p f)
        (display-color-p f)
        (display-pixel-width f)
        (display-pixel-height f)
        (display-mm-width f)
        (display-mm-height f)
        (display-screens f)
        (display-color-cells f)
        (display-planes f)
        (display-visual-class f)
        (display-backing-store f)))

(condition-case err
    (display-graphic-p 999999)
  (error (car err)))
(condition-case err
    (display-pixel-width 999999)
  (error (car err)))
