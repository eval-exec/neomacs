(let ((m (make-mutex)))
  (let ((cv (make-condition-variable m)))
    (condition-case err (condition-notify cv) (error (car err)))))
(let ((m (make-mutex)))
  (let ((cv (make-condition-variable m)))
    (mutex-lock m)
    (prog1 (condition-notify cv)
      (mutex-unlock m))))
(let ((m (make-mutex)))
  (let ((cv (make-condition-variable m)))
    (condition-case err (condition-wait cv) (error (car err)))))
